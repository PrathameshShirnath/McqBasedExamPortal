<link rel="stylesheet" href="/css/admin/viewcourse.css">

<div class="container">
	<!-- Responsive Table Section -->
	<table class="responsive-table">
		<!-- Responsive Table Header Section -->
		<thead class="responsive-table__head">
			<tr class="responsive-table__row">
				<th class="responsive-table__head__title responsive-table__head__title--name">Course Name
					<svg version="1.1" class="up-arrow" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 512 512" style="enable-background:new 0 0 512 512;" xml:space="preserve">
						<path d="M374.176,110.386l-104-104.504c-0.006-0.006-0.013-0.011-0.019-0.018c-7.818-7.832-20.522-7.807-28.314,0.002c-0.006,0.006-0.013,0.011-0.019,0.018l-104,104.504c-7.791,7.829-7.762,20.493,0.068,28.285    c7.829,7.792,20.492,7.762,28.284-0.067L236,68.442V492c0,11.046,8.954,20,20,20c11.046,0,20-8.954,20-20V68.442l69.824,70.162c7.792,7.829,20.455,7.859,28.284,0.067C381.939,130.878,381.966,118.214,374.176,110.386z" />
					</svg>
				</th>
				<th class="responsive-table__head__title responsive-table__head__title--name">Description</th>
                <th class="responsive-table__head__title responsive-table__head__title--name">Created At</th>
				<th class="responsive-table__head__title responsive-table__head__title--name">Action</th>
			</tr>
		</thead>
		<!-- Responsive Table Body Section -->
		<tbody class="responsive-table__body">
            <% for(i of course_list) { %>
			<tr class="responsive-table__row">
				<td class="responsive-table__body__text responsive-table__body__text--name"><%= i.coursename %>
				</td>
				<td class="responsive-table__body__text responsive-table__body__text--name"><%= i.description %></td>
                <td class="responsive-table__body__text responsive-table__body__text--name"><%= i.createdAt.getDate()+"-"+(i.createdAt.getMonth()+1)+"-"+ i.createdAt.getFullYear() %></td>
				<td class="responsive-table__body__text responsive-table__body__text--name"><a class="delete-course-button" href="/users/destroyc/<%=i.id%>" class="more">Edit</a></td>
                <td class="responsive-table__body__text responsive-table__body__text--name"><a class="delete-course-button" href="/users/destroyc/<%=i.id%>" class="more">Delete</a></td>
			</tr>
            <% } %>
			
			
		</tbody>
	</table>
</div>
<script src="/js/admin/viewcourse.js"></script>
